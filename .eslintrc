{
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "es2017": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "key-spacing": "off",
    "max-len": [
      "error",
      100,
      2,
      {
        "ignoreTrailingComments": true,
        "ignoreUrls": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "comma-dangle": "off",
    "semi": [
      "error",
      "always"
    ],
    "semi-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "no-extra-semi": "error",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 2,
        "maxEOF": 1
      }
    ],
    "no-unexpected-multiline": "error",
    "no-empty": "error",
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          "lodash"
        ]
      }
    ],
    "import/no-named-default": "off"
  }
}